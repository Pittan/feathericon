extends inc/layouts/_application
block title
  title= page.top.title
block prepend meta
  - var bodyClass = 'home'
block append meta
block body
  #fb-root
  script.
    (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.7&appId=1774381786134166";
    fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
  include inc/layouts/_header
  .shareButtons
    include inc/modules/_share_buttons
  .l-main
    .glyph
      include inc/modules/_icons
  include inc/layouts/_footer
block append scriptFooter
  script(async='', defer='', src='https://buttons.github.io/buttons.js')
